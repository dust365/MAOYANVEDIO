<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/listViewFirst"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorFirstItemBackground"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#d1d1d1"
        android:dividerHeight="1.2px"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ListView
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:id="@+id/listViewSecond"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorSecondItemBackground"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#e7e7e7"
            android:dividerHeight="1.2px"
            android:scrollbars="none" />

        <ImageView
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <ListView
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:id="@+id/listViewThird"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorThirdItemBackground"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#e7e7e7"
            android:dividerHeight="1.2px"
            android:scrollbars="none"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
